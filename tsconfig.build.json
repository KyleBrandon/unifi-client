{
  "compilerOptions": {
    "lib": ["es2018", "dom", "esnext"],
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "tests"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
